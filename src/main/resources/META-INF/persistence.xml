      <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://smarteat-server.database.windows.net:1433;database=smarteatdb" />
      <property name="javax.persistence.jdbc.user" value="lars" />
      <property name="javax.persistence.jdbc.password" value="BananaU24" />
      <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />

      <!-- Hibernate properties -->
      <property name="hibernate.show_sql" value="true" />
