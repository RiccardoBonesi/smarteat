<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>

    <package name="myPackage" extends="struts-default">

        <default-action-ref name="index" />

        <action name="index" class="org.teamsmarteat.IndexAction">
            <result>/WEB-INF/jsp/index.jsp</result>
        </action>

        <action name="helloWorld" class="org.teamsmarteat.HelloWorldAction">
            <result name="input">/jsp/index.jsp</result>
            <result>/WEB-INF/jsp/helloWorld.jsp</result>
        </action>

        <action name="dashboard" class="org.teamsmarteat.DashboardAction">
            <result name="success">/WEB-INF/jsp/dashboard.jsp</result>
        </action>
        <action name="orderlist" class="org.teamsmarteat.OrderListAction" method="execute">
            <result name="success">/WEB-INF/jsp/orderlist.jsp</result>
        </action>
        <action name="dishlist" class="org.teamsmarteat.DishListAction" method="execute">
            <result name="success">/WEB-INF/jsp/dishlist.jsp</result>
        </action>

        <action name="create_dish" class="org.teamsmarteat.CreateDishAction" method="execute">
            <result name="success">/WEB-INF/jsp/create_dish.jsp</result>
        </action>

        <action name="create_dish_confirmation" class="org.teamsmarteat.CreateDishAction" method="confirm_dish">
            <result name="success">/WEB-INF/jsp/create_dish.jsp</result>
        </action>

        <action name="delete_dish" class="org.teamsmarteat.DishListAction" method="delete_dish">
            <result name="success">/WEB-INF/jsp/dishlist.jsp</result>
        </action>

        <action name="search_dish" class="org.teamsmarteat.DishListAction" method="search_dish">
            <result name="success">/WEB-INF/jsp/dishlist.jsp</result>
        </action>

        <action name="menu_management" class="org.teamsmarteat.MenuManagement" method="execute">
            <result name="success">/WEB-INF/jsp/menu_management.jsp</result>
        </action>

        <action name="view_detail" class="org.teamsmarteat.OrderLineAction" method="execute">
            <result name="success">/WEB-INF/jsp/order_detail.jsp</result>
        </action>

        <action name="login" class="org.teamsmarteat.LoginAction">
            <result name="success">/WEB-INF/jsp/dashboard.jsp</result>
            <result name="error">/WEB-INF/jsp/loginerror.jsp</result>
        </action>
    </package>

</struts>
