<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>

    <package name="myPackage" extends="struts-default">

        <default-action-ref name="index" />

        <action name="index" class="org.teamsmarteat.IndexAction">
            <result>/WEB-INF/jsp/index.jsp</result>
        </action>

        <action name="helloWorld" class="org.teamsmarteat.HelloWorldAction">
            <result name="input">/jsp/index.jsp</result>
            <result>/WEB-INF/jsp/helloWorld.jsp</result>
        </action>

        <action name="dashboard" class="org.teamsmarteat.DashboardAction">
            <result name="success">/WEB-INF/jsp/dashboard.jsp</result>
        </action>
        <action name="orderlist" class="org.teamsmarteat.OrderListAction" method="execute">
            <result name="success">/WEB-INF/jsp/orderlist.jsp</result>
        </action>
        <action name="dishlist" class="org.teamsmarteat.DishListAction" method="execute">
            <result name="success">/WEB-INF/jsp/dishlist.jsp</result>
        </action>

        <action name="create_dish" class="org.teamsmarteat.CreateDishAction" method="execute">
            <result name="success">/WEB-INF/jsp/create_dish.jsp</result>
        </action>

        <action name="create_dish_confirmation" class="org.teamsmarteat.CreateDishAction" method="confirm_dish">
            <result name="error">/WEB-INF/jsp/create_dish.jsp</result>
            <result name="success" type = "redirectAction">dishlist.action</result>
            <result name="nocategory" type="redirectAction">create_dish.action</result>
        </action>

        <!--<action name="search_ingredient" class="org.teamsmarteat.CreateDishAction" method="search_ingredient">-->
            <!--<result name="success">/WEB-INF/jsp/create_dish.jsp</result>-->
        <!--</action>-->

        <action name="delete_dish" class="org.teamsmarteat.DishListAction" method="delete_dish">
            <result name="success">/WEB-INF/jsp/dishlist.jsp</result>
        </action>

        <action name="search_dish" class="org.teamsmarteat.DishListAction" method="search_dish">
            <result name="success">/WEB-INF/jsp/dishlist.jsp</result>
        </action>

        <action name="search_promotion" class="org.teamsmarteat.PromotionAction" method="search_promotion">
            <result name="success">/WEB-INF/jsp/promotionlist.jsp</result>
        </action>

        <action name="promotion" class="org.teamsmarteat.PromotionAction" method="execute">
            <result name="success">/WEB-INF/jsp/promotionlist.jsp</result>
        </action>

        <action name="addDishPromotion" class="org.teamsmarteat.AddDishToPromotionAction" method="execute">
            <result name="success">/WEB-INF/jsp/adddishpromotion.jsp</result>
        </action>



        <action name="deletePromotion" class="org.teamsmarteat.PromotionAction" method="deletePromo">
            <result name="success">/WEB-INF/jsp/promotionlist.jsp</result>
            <result name="error">/WEB-INF/jsp/promotionlist.jsp</result>
        </action>

        <action name="deleteDishPromotion" class="org.teamsmarteat.PromotionAction" method="deleteDish">
            <result name="success">/WEB-INF/jsp/promotionlist.jsp</result>
        </action>
        <action name="create_promotion" class="org.teamsmarteat.CreatePromotionAction">
            <result name="success">/WEB-INF/jsp/createpromotion.jsp</result>
        </action>
        <action name="create_promotion_confirmation" class="org.teamsmarteat.CreatePromotionAction" method="confirm_promotion">
            <result name="error">/WEB-INF/jsp/createpromotion.jsp</result>
            <result name="success" type = "redirectAction">promotion.action</result>
        </action>

        <action name="view_detail" class="org.teamsmarteat.OrderLineAction" method="execute">
            <result name="success">/WEB-INF/jsp/order_detail.jsp</result>
        </action>

        <action name="checkout" class="org.teamsmarteat.CheckoutAction" method="execute">
            <result type="redirectAction">orderlist.action</result>
        </action>

        <action name="login" class="org.teamsmarteat.LoginAction">
            <result name="input">/WEB-INF/jsp/index.jsp</result>
            <result name="success">/WEB-INF/jsp/orderlist.jsp</result>
        </action>

    </package>

</struts>
